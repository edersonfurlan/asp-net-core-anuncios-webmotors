@model IEnumerable<WebMotors.UI.WEB.Models.AnuncioMOD>
@{
    ViewData["Title"] = "Anúncios";
}
<p class="my-4">
    Consulte abaixo sua lista de anúncios
</p>
@{
    //verifica se tem anúncios
    if (Model.Count() > 0)
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">
                        Consultar
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.marca_nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.modelo_nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.versao_nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ano)
                    </th>
                    <th class="text-center">
                        Gerenciar
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle text-center">
                        <a asp-area="" asp-controller="Anuncio" asp-action="Detalhes" asp-route-id="@item.ID" class="btn btn-link-danger">
                            <i class="material-icons display-5">find_in_page</i>
                        </a>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.marca_nome)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.modelo_nome)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.versao_nome)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ano)
                    </td>
                    <td class="align-middle text-center">
                        <a asp-area="" asp-controller="Anuncio" asp-action="Editar" asp-route-id="@item.ID" class="btn btn-link-danger">
                            <i class="material-icons display-5">edit</i>
                        </a>
                        <a asp-area="" asp-controller="Anuncio" asp-action="Excluir" asp-route-id="@item.ID" class="btn btn-link-danger">
                            <i class="material-icons display-5">delete_forever</i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    //se não tem anúncios, exibe mensagem
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="alert alert-danger">
                        <span class="font-weight-bold">Ops! Nenhum anúncio encontrado.</span><br/>
                        Clique sobre o botão acima para cadastrar um novo anúncio.
                    </div>
                </div>
            </div>
        </div>
    }
}